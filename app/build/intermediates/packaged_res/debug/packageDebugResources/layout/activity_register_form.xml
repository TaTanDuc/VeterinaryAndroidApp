<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterForm">
    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="934dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/icon2"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon1"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="233dp"
            android:background="@null"
            app:srcCompat="@drawable/icon_register"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register now to become a member of the veterinary community on our app and receive special offers and care services just for your pet."
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#A6A6A6"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/fredoka_medium"
            android:hint="Email Address"
            android:inputType="text"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textColorHint="#A6A6A6"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/fredoka_medium"
            android:hint="PassWord"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textColorHint="#A6A6A6"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordConfirmed_input"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/fredoka_medium"
            android:hint="PassWord Confirmed"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textColorHint="#A6A6A6"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/main"
            android:fontFamily="@font/fredoka_medium"
            android:padding="10dp"
            android:text="REGISTER"
            android:textColor="@color/black"
            android:textColorLink="#5CB15A"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>